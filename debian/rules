#!/usr/bin/make -f

clean:
	dh_testdir
	dh_testroot
	-$(MAKE) distclean
	dh_clean

config.log:
	./configure --prefix=/usr

build-stamp: config.log
	$(MAKE)
	touch build-stamp

build: build-stamp

install: build
	$(MAKE) DESTDIR=`pwd`/debian/telepathy-gabble install

binary-indep:

binary-arch: install
	dh_testdir -a
	dh_testroot -a
	dh_installdocs -a
	dh_installchangelogs -a
	dh_strip -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_compress -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch

.PHONY: clean configure build install binary-indep binary-arch binary
